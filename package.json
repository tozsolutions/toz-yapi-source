{
  "name": "toz-yapi-source",
  "version": "1.0.0",
  "description": "TOZ YAPI - Modern Node.js API Project",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests --ext .js",
    "lint:fix": "eslint src tests --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "prepare": "npm run lint && npm run test",
    "docker:build": "docker build -t toz-yapi-source .",
    "docker:run": "docker run -p 3000:3000 toz-yapi-source"
  },
  "keywords": [
    "api",
    "nodejs",
    "express",
    "rest",
    "backend",
    "microservice"
  ],
  "author": "TOZ Solutions",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "mongoose": "^8.0.3",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.1",
    "@types/jest": "^29.5.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tozsolutions/toz-yapi-source.git"
  },
  "bugs": {
    "url": "https://github.com/tozsolutions/toz-yapi-source/issues"
  },
  "homepage": "https://github.com/tozsolutions/toz-yapi-source#readme"
}
